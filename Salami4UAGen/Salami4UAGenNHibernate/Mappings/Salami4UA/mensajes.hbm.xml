<?xml version="1.0" encoding="utf-8" ?>
		<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
		                   assembly="Salami4UAGenNHibernate"
		                   namespace="Salami4UAGenNHibernate.EN.Salami4UA">
			<class name="MensajesEN" table="[Mensajes]">
				  	
						<id name="Id" column="[Id]" type="integer">
							<generator class="identity"/>
						</id>
					<property name="Message" type="string"> 
						<column name="[Message]"  not-null="true"/>
					</property>
			
			
			
		  			
						<many-to-one name="UserOrigen" class="Salami4UAGenNHibernate.EN.Salami4UA.UsuarioEN" >	
								<column name="[FK_Nickname_idUser]"/>
						</many-to-one>
											 					
			
		  			
						<many-to-one name="UserDestino" class="Salami4UAGenNHibernate.EN.Salami4UA.UsuarioEN" >	
								<column name="[FK_Nickname_idUser]"/>
						</many-to-one>
											 					
					
					
					
					
		
		  </class>
		  
		  <query name="MensajesENReadAllHQL">from MensajesEN</query>
		  <query name="MensajesENdameTodosLosMensajesEnviadosPorUsuarioHQL"><![CDATA[FROM MensajesEN m WHERE m.UserOrigen.Nickname = :nick]]></query>
		  <query name="MensajesENdameTodosLosMensajesRecibidosPorUsuarioHQL"><![CDATA[FROM MensajesEN m WHERE m.UserDestino.Nickname = :nick]]></query>
		  <query name="MensajesENdameTodosLosMensajesEntreUsuariosHQL"><![CDATA[FROM MensajesEN m WHERE m.UserOrigen.Nickname = :nickOrigen AND m.UserDestino.Nickname = :nickDestino]]></query>
		</hibernate-mapping>
	