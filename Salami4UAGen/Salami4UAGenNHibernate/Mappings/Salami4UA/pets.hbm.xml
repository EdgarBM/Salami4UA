<?xml version="1.0" encoding="utf-8" ?>
		<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
		                   assembly="Salami4UAGenNHibernate"
		                   namespace="Salami4UAGenNHibernate.EN.Salami4UA">
			<class name="PetsEN" table="[Pets]">
						<id name="Name" column="[Name]"/>
			
			
		  			
						<bag name="User" table="[user_pets]" inverse="true" >
							<key>
									<column name="[FK_Name_idPets]"/>
							</key>
      						<many-to-many class="Salami4UAGenNHibernate.EN.Salami4UA.UserEN">
									<column name="[FK_Nickname_idUser]"/>
      						</many-to-many>
    					</bag>
					
					
		
		  </class>
		  
		  <query name="PetsENReadAllHQL">from PetsEN</query>
		  <query name="PetsENdameTodosLosAnimalesHQL"><![CDATA[FROM PetsEN]]></query>
		  <query name="PetsENdameAnimalesPorUsuarioHQL"><![CDATA[FROM PetsEN p WHERE p.User = :usuario]]></query>
		</hibernate-mapping>
	